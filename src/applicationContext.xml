<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:application.properties"/>

    <bean id="databaseOperation" class="com.Vehicle.DataBaseOperation">
        <property name="url" value="${database.url}"/>
        <property name="userName" value="${database.username}"/>
        <property name="password" value="${database.password}"/>
    </bean>

    <bean id="car" class="com.Vehicle.Car">
        <constructor-arg ref="databaseOperation"/>
    </bean>
    <bean id="plane" class="com.Vehicle.Plane">
        <property name="dataBaseOperation" ref="databaseOperation"/>
    </bean>

    <bean id="drawBean2d" class="com.dependencyInjection.Draw2d"/>
    <bean id="drawBean3d" class="com.dependencyInjection.Draw3d"/>

    <bean id="rectangle" class="com.dependencyInjection.Rectangle">
        <property name="draw2d" ref="drawBean2d"/>
        <property name="draw3d" ref="drawBean3d"/>
    </bean>

    <bean id="myCircle" class="com.dependencyInjection.Circle">
        <constructor-arg ref="drawBean2d"/>
        <constructor-arg ref="drawBean3d"/>
    </bean>

</beans>
